		<meta property="og:url" content="http://detentionlogs.com.au" />

        <%= stylesheet_link_tag    "style", :media => "all" %>
       	   <%= javascript_include_tag "fixers" %>
    </head>
    <body class="h-card holding">
        <article class="site-intro">
           <h1 class="logo p-org p-name">Detention Logs</h1>
	       <p class="loud p-note">We publish databases, documents and investigations that reveal new perspectives on conditions and events in Australia’s immigration detention&nbsp;network.</p>
        </article>

        <%= form_for @subscription, :html => {:class => "mail-list"} do |f| %>
			<% if notice == "emailfalse" %>
	         <p class="verification-msg box note" id="email-error">Please enter a valid email&nbsp;address</p>
			 <% elsif notice == "emailtrue" %>
		     <p class="verification-msg box note" id="email-success">Success. We'll be in touch soon.</p>
			 <% end %>
            <legend class="distinct"><label for="email">Get Detention&nbsp;Logs updates</label></legend>
	        <input type="email" name="subscription[email]" placeholder="Email Address" id="email" required/>
	        <label class="btn">
	        	Subscribe
	        	<input type="submit" onClick="_gaq.push(['_trackEvent', 'contact', 'list-subscribe', 'holding form']);"/>
	        </label>
	        <small class="supporting">Receive occasional emails about our releases. <!--  <a href="about/privacy/" title="Detention Logs Privacy Policy">See&nbsp;our&nbsp;Privacy&nbsp;Policy</a> --></small>
		<% end %>
         <footer class="site-footer" role="contentinfo">
	        <ul class="contact discrete">
	        	<li><a href="http://twitter.com/detentionlogs" class="u-url twitter" rel="me" onClick="_gaq.push(['_trackEvent', 'social', 'out to Twitter', 'footer']);">@DetentionLogs</a></li>
	        	<li><a class="u-email email" href="mailto:detentionlogs@gmail.com" onClick="_gaq.push(['_trackEvent', 'contact', 'email', 'footer']);">Contact</a></li>
	        </ul>
        </footer>
