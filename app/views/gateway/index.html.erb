        <title>Detention Logs</title>
        
        <meta name="author" content="Detention Logs">
        <meta name="description" content="We publish databases, documents and investigations that reveal new perspectives on conditions and events in Australia’s immigration detention network.">
        <meta name="viewport" content="width=device-width">
		<meta name="google-site-verification" content="UyFaPbUx_nMcjSfI1G-dkYcTZljC0-do61HPxvESXic" />
		<link rel="canonical" href="http://www.detentionlogs.com.au" />

    	<!-- Twitter -->
	    <meta name="twitter:card" content="summary">
		<meta name="twitter:url" content="http://detentionlogs.com.au">
		<meta name="twitter:title" content="Detention Logs">
		<meta name="twitter:description" content="We publish databases, documents and investigations that reveal new perspectives on conditions and events in Australia’s immigration detention network.">
		<meta name="twitter:creator" content="@detentionlogs">

		<!-- Facebook -->
	    <meta property="og:title" content="Detention Logs" />
