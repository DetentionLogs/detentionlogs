   gem 'taps', :require => false
end

group :development, :test do
  gem 'rspec-rails', '~> 2.0'

  gem 'factory_girl_rails'
end

# Generates a sitemap for search engines & other bots
gem 'sitemap_generator', '~>5.0.4'

